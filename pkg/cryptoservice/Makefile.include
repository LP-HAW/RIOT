PKG_SOURCE_DIR ?= $(PKGDIRBASE)/cryptoservice

INCLUDES += -I$(PKG_SOURCE_DIR)/api
INCLUDES += -I$(RIOTPKG)/cryptoservice/include

ifneq (,$(filter psa_cryptoservice_%, $(USEMODULE)))
  DIRS += $(RIOTPKG)/cryptoservice/psa_cryptoservice
  INCLUDES += -I$(RIOTBASE)/sys/psa_crypto/include
endif

ifneq (,$(filter psa_secure_element_cryptoservice,$(USEMODULE)))
  DIRS += $(RIOTPKG)/cryptoservice/psa_cryptoservice_se
  INCLUDES += -I$(RIOTBASE)/sys/psa_crypto/include
endif

PSEUDOMODULES += psa_cryptoservice_p256
PSEUDOMODULES += psa_cryptoservice_sha256
PSEUDOMODULES += psa_cryptoservice_aes128

PSEUDOMODULES += psa_secure_element_cryptoservice
PSEUDOMODULES += psa_secure_element_cryptoservice_ecc_p256
